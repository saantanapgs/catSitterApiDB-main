generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Service {
  id          Int      @id @default(autoincrement())
  petName     String
  serviceType String
  date        DateTime
  time        String
  notes       String?
  price       Float     @default(0)
  createdAt   DateTime  @default(now())
  status String @default("agendado")
  
  userId  Int
  adminId Int

  user    User @relation("UserServices", fields: [userId], references: [id])
  admin   User @relation("AdminServices", fields: [adminId], references: [id])
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String
  birthday  DateTime
  password  String
  role      String    @default("user")
  createdAt DateTime  @default(now())

  cats       Cat[]
  services   Service[] @relation("UserServices")
  adminTasks Service[] @relation("AdminServices")
}

model Cat {
  id     Int    @id @default(autoincrement())
  name   String
  age    Int?
  needs  String?
  userId Int

  user   User @relation(fields: [userId], references: [id])
}
